<p id="notice"><%= notice %></p>

<h1>Sneakers</h1>


<div class="row row-cols-1 row-cols-md-3 g-4 container">
  <% @sneakers.each do |sneaker| %>
    <div class="col">
      <div class="card">
        <img src="<%= sneaker.image %>" class="card-img-top p-2" alt="...">
        <img src="<%= sneaker.logo %>" width="50" class="m-2" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= sneaker.title %></h5>
          <div class="d-flex justify-content-between">
              <p><%= sneaker.release_date %></p>
              <p><%= sneaker.price %><span>â‚¬</span></p>
          </div>
          <div class="d-flex justify-content-between">
            <button class="btn btn-success" > <a><%= link_to 'Edit', edit_sneaker_path(sneaker) %></a> </button>
            <button class="btn btn-primary" > <a><%= link_to 'Show', sneaker %></a> </button>
            <button class="btn btn-danger" > <a><%= link_to 'Destroy', sneaker, method: :delete, data: { confirm: 'Are you sure?' } %></a> </button>
          </div>
       </div>
      </div>
    </div>
  <% end %>
</div>

