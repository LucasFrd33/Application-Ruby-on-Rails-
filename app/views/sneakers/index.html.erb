<p id="notice"><%= notice %></p>

<h1>Sneakers</h1>

<table>
  <thead>
    <tr>
      <th>Released</th>
      <th>Image</th>
      <th>Logo</th>
      <th>Tilte</th>
      <th>Release date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sneakers.each do |sneaker| %>
      <tr>
        <td><%= sneaker.released %></td>
        <td><%= sneaker.image %></td>
        <td><%= sneaker.logo %></td>
        <td><%= sneaker.tilte %></td>
        <td><%= sneaker.release_date %></td>
        <td><%= sneaker.price %></td>
        <td><%= link_to 'Show', sneaker %></td>
        <td><%= link_to 'Edit', edit_sneaker_path(sneaker) %></td>
        <td><%= link_to 'Destroy', sneaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

